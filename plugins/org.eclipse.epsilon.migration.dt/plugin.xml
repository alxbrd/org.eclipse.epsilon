<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension-point id="strategy" name="Migration Strategy" schema="schema/strategy.exsd"/>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.epsilon.migration.dt.editor.MigrationEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            extensions="mig"
            icon="icons/flock16.png"
            id="org.eclipse.epsilon.migration.dt.editor.MigrationEditor"
            name="Epsilon Migration Language Editor"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="org.epsilon.migration.eclipse.dt.launching.MigrationLaunchConfigurationDelegate"
            icon="icons/flock16.png"
            id="EpsilonMigration"/>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="org.eclipse.epsilon.migration.dt.launching.MigrationLaunchConfigurationDelegate"
            id="org.epsilon.migration.eclipse.dt.launching.MigrationLaunchConfigurationDelegate"
            modes="run"
            name="Epsilon Migration"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="org.eclipse.epsilon.migration.dt.launching.MigrationLaunchConfigurationTabGroup"
            description="Create a configuration to launch an Epsilon Migration"
            id="org.eclipse.epsilon.eclipse.dt.launching.MigrationLaunchConfigurationTabGroup"
            type="org.epsilon.migration.eclipse.dt.launching.MigrationLaunchConfigurationDelegate"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.eclipse.epsilon.dt"
            class="org.eclipse.epsilon.migration.dt.wizards.NewMigrationFileWizard"
            icon="icons/flock16.png"
            id="org.eclipse.epsilon.migration.dt.wizards.NewMigrationFileWizard"
            name="Epsilon Migration"/>
   </extension>
   <extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.eclipse.epsilon.migration.dt.ExecuteMigration"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.eclipse.epsilon.migration.dt.actions.ExecuteMigration"
               icon="icons/flock16.png"
               id="org.eclipse.epsilon.migration.dt.actions.ExecuteMigration"
               label="Execute Migration">
         </action>
      </objectContribution>
      <objectContribution
            id="org.eclipse.epsilon.migration.dt.RestoreBackup"
            nameFilter="*_backup*"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.eclipse.epsilon.migration.dt.actions.RestoreBackup"
               id="org.eclipse.epsilon.migration.dt.actions.RestoreBackup"
               label="Restore Backup">
         </action>
      </objectContribution>
   </extension>
</plugin>
