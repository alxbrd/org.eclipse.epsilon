<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.epsilon</groupId>
    <artifactId>parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <groupId>org.eclipse.epsilon</groupId>
  <artifactId>org.eclipse.epsilon.standalone</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>eclipse-plugin</packaging>

  <build>
    <plugins>
      <plugin>
	<artifactId>maven-dependency-plugin</artifactId>
	<version>2.10</version>
	<executions>
	  <execution>
	    <id>copy</id>
	    <goals>
	      <goal>copy-dependencies</goal>
	    </goals>
	  </execution>
	</executions>
      </plugin>

      <!-- Note: this only works from a full reactor build (mvn
           package from the root directory), due to the use of
           moduleSets. -->
      <plugin>
	<artifactId>maven-assembly-plugin</artifactId>
	<version>2.6</version>
	<executions>
	  <execution>
	    <id>generate-jars</id>
	    <phase>package</phase>
	    <goals>
	      <goal>single</goal>
	    </goals>
	    <configuration>
	      <finalName>epsilon-1.3</finalName>
	      <descriptors>
		<descriptor>assembly/core.xml</descriptor>
		<descriptor>assembly/core-src.xml</descriptor>
		<descriptor>assembly/emf.xml</descriptor>
		<descriptor>assembly/emf-src.xml</descriptor>
		<descriptor>assembly/emf-deps.xml</descriptor>
		<descriptor>assembly/uml.xml</descriptor>
		<descriptor>assembly/uml-src.xml</descriptor>
		<descriptor>assembly/uml-deps.xml</descriptor>
	      </descriptors>
	    </configuration>
	  </execution>
	</executions>
      </plugin>
    </plugins>
  </build>
</project>
