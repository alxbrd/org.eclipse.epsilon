<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>core-src</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
 	<include>*:org.eclipse.epsilon.eol.engine</include>
	<include>*:org.eclipse.epsilon.eol.engine</include>
	<include>*:org.eclipse.epsilon.egl.engine</include>
	<include>*:org.eclipse.epsilon.egl.traceability.fine</include>
	<include>*:org.eclipse.epsilon.ecl.engine</include>
	<include>*:org.eclipse.epsilon.eml.engine</include>
	<include>*:org.eclipse.epsilon.etl.engine</include>
	<include>*:org.eclipse.epsilon.evl.engine</include>
	<include>*:org.eclipse.epsilon.epl.engine</include>
	<include>*:org.eclipse.epsilon.eunit.engine</include>
	<include>*:org.eclipse.epsilon.erl.engine</include>
	<include>*:org.eclipse.epsilon.ewl.engine</include>
	<include>*:org.eclipse.epsilon.flock.engine</include>
	<include>*:org.eclipse.epsilon.profiling</include>
	<include>*:org.eclipse.epsilon.common</include>
	<include>*:org.eclipse.epsilon.eol.tools</include>
	<include>*:org.eclipse.epsilon.emc.composite</include>
	<include>*:org.eclipse.epsilon.emc.plainxml</include>
	<include>*:org.eclipse.epsilon.emc.csv</include>
	<include>*:org.antlr.runtime_3.1.b1</include>
      </includes>
      <binaries>
	<unpack>true</unpack>
	<unpackOptions>
	  <excludes>
	    <exclude>plugin.properties</exclude>
	    <exclude>plugin.xml</exclude>
	    <exclude>schema/**</exclude>
	    <exclude>**/*.RSA</exclude>
	    <exclude>**/*.DS</exclude>
	    <exclude>**/*.SF</exclude>
	    <exclude>src/**</exclude>
	  </excludes>
	</unpackOptions>
      </binaries>
      <sources>
	<includeModuleDirectory>false</includeModuleDirectory>
      </sources>
    </moduleSet>
  </moduleSets>
</assembly>
